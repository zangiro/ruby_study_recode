import java.util.Scanner;
 
class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    int num = Integer.parseInt(sc.nextLine());
    int answer = 0;
    while (num != 0) {
      if (num > 0) {
        num -= 1;
        answer -= 1;
      } else {
        num += 1;
        answer += 1;
      }
    }
    System.out.println(answer);
  }
}

