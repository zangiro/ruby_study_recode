count = 0

hash.each do |key, value|
  no_1 = value[:no_1]
  no_2 = value[:no_2]
  target_array_1 = name_array[no_1]   # ["t", "a", "n", "a", "k", "a"]
  target_array_2 = name_array[no_2]   # 上のとは別のやつ

  
  x_index = 0
  target_array_1.each do |xx|
    y_index = 0
    target_array_2.each do |yy|
      if_count = 0
      if xx == yy
        target_x = xx
        target_y = yy
        now_x_index = x_index
        now_y_index = y_index
        while target_x == target_y
          if now_x_index < (target_array_1.length - 1) && now_y_index < (target_array_2.length - 1) 
            now_x_index += 1
            now_y_index += 1
            target_x = target_array_1[now_x_index]
            target_y = target_array_2[now_y_index]
          else
            target_y = nil
          end
          if_count += 1
        end
  
        if count < if_count
          count = if_count
        end
      end
  
      y_index += 1
    end
    x_index += 1
  end


end