lines = $stdin.readlines.map{|word|word.chomp}
name_count = lines[0].to_i
name_array = lines[1..name_count].map{|a|a.chars}   # ["tanaka", "nakata", "takahashi"]
#=>   [["t", "a", "n", "a", "k", "a"], ["n", "a", "k", "a", "t", "a"], 
#       ["t", "a", "k", "a", "h", "a", "s", "h", "i"]]

# { 1 => {target1: 0, target2: 1, count: 0}....}というハッシュを作る

combi = Array.new(name_count) { |i| i }
combi_array = combi.combination(2).to_a
# [[0, 1], [0, 2], [0, 3], [1, 2], [1, 3], [2, 3]]

hash = {}
combi_array.each_with_index do |arr, index|
  hash[index] = {no_1: arr[0], no_2: arr[1], count: 0}
end
# {0=>{:no_1=>0, :no_2=>1, :count=>0}, 1=>{:no_1=>0, :no_2=>2, :count=>0}, 
#  2=>{:no_1=>0, :no_2=>3, :count=>0}, 3=>{:no_1=>1, :no_2=>2, :count=>0}, 
#  4=>{:no_1=>1, :no_2=>3, :count=>0}, 5=>{:no_1=>2, :no_2=>3, :count=>0}}

